<?xml version="1.0" encoding="utf-8"?>  
<selector  
  xmlns:android="http://schemas.android.com/apk/res/android">  
  <item android:state_enabled="false">  
  <shape>  
      <solid android:color="@color/window_body_back_color" />
      <padding android:left="@dimen/button_pad_width" android:top="@dimen/button_pad_width" 
          android:right="@dimen/button_pad_width" android:bottom="@dimen/button_pad_width"/>
      <stroke android:width="@dimen/button_stroke_width" android:color="@color/window_btn_stroke_color" />
  </shape>  
  </item>  
  
  <item android:state_pressed="true">  
  <shape>  
      <solid android:color="@color/window_border_color" />
      <padding android:left="@dimen/button_pad_width" android:top="@dimen/button_pad_width" 
          android:right="@dimen/button_pad_width" android:bottom="@dimen/button_pad_width"/>
      <stroke android:width="@dimen/button_stroke_width" android:color="@color/window_border_color" />
  </shape>  
  </item>  
  
  <item android:state_focused="true">
  <shape>
      	<solid android:color="@color/window_body_selected_back_color"/>
        <stroke android:width="@dimen/button_stroke_width" android:color="@color/window_border_color" />
        <padding android:bottom="@dimen/button_pad_width" android:left="@dimen/button_pad_width" 
                android:right="@dimen/button_pad_width" android:top="@dimen/button_pad_width" />
  </shape>
  </item>
  
  <item>  
  <shape>
      <solid android:color="@color/window_body_selected_back_color" />
      <padding android:left="@dimen/button_pad_width" android:top="@dimen/button_pad_width" 
          android:right="@dimen/button_pad_width" android:bottom="@dimen/button_pad_width"/>
      <stroke android:width="@dimen/button_stroke_width" android:color="@color/window_body_selected_back_color" />
  </shape>
  </item>
</selector>